<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>14.0</LangVersion>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>$(NoWarn);1591</NoWarn>
		
		<!-- NuGet Package Metadata -->
		<PackageId>SlideGenerator.Framework</PackageId>
		<Version>1.0.0</Version>
		<Authors>thnhmai06</Authors>
		<Description>A library for generating PowerPoint presentations from Excel data with intelligent image cropping and text replacement.</Description>
		<PackageTags>PowerPoint;Excel;Slide;Generator;OpenXML;Presentation</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/thnhmai06/SlideGenerator.Framework</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="docs\**" />
	  <EmbeddedResource Remove="docs\**" />
	  <None Remove="docs\**" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove=".gitignore" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="tests\**" />
		<EmbeddedResource Remove="tests\**" />
		<None Remove="tests\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="DocumentFormat.OpenXml" Version="3.2.0" />
		<PackageReference Include="Emgu.CV.Models" Version="4.12.0.5764" />
		<PackageReference Include="Stubble.Core" Version="1.10.8" />
		<PackageReference Include="Emgu.CV" Version="4.12.0.5764" />
		<PackageReference Include="ClosedXML" Version="0.104.2" />
		<PackageReference Include="Spire.Presentation" Version="10.1.0" />
		<PackageReference Include="Magick.NET-Q8-AnyCPU" Version="14.10.0" />
	</ItemGroup>

</Project>
